<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/slategrey</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/backgroundauth</item>
    </style>


    <style name="auth" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/slategrey</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="GreenTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/slategrey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/backgroundauth</item>
    </style>



    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuItems" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:padding">40dip</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SpinnerItems" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">20sp</item>

        <item name="android:padding">15dip</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ArticleText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:fontFamily">arial-black</item>

    </style>




</resources>
